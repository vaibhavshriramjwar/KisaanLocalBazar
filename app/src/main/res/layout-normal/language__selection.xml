<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Language_Selection">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/choose_lang"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/text"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal" />

   <com.google.android.material.card.MaterialCardView
       android:layout_width="250dp"
       android:layout_height="80dp"
       app:cardBackgroundColor="#fff"
       android:clickable="true"
       android:focusable="true"
       android:id="@+id/marathi"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/text"
       android:layout_marginTop="50dp">

       <net.colindodd.gradientlayout.GradientRelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           gl:start_color="@color/col7"
           gl:end_color="@color/col8"
           gl:orientation="LEFT_RIGHT">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="मराठी"
               android:textStyle="bold"
               android:textSize="25sp"
               android:textColor="#fff"
               android:layout_centerInParent="true"
               android:layout_gravity="center"/>


       </net.colindodd.gradientlayout.GradientRelativeLayout>







   </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#fff"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/hindi"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/marathi"
        android:layout_marginTop="20dp">


        <net.colindodd.gradientlayout.GradientRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            gl:start_color="@color/col9"
            gl:end_color="@color/col10"
            gl:orientation="LEFT_RIGHT">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="हिन्दी"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:layout_gravity="center"/>

        </net.colindodd.gradientlayout.GradientRelativeLayout>





    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#fff"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/english"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hindi"
        android:layout_marginTop="20dp">

        <net.colindodd.gradientlayout.GradientRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            gl:start_color="@color/col3"
            gl:end_color="@color/col4"
            gl:orientation="LEFT_RIGHT">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:layout_gravity="center"/>

        </net.colindodd.gradientlayout.GradientRelativeLayout>




    </com.google.android.material.card.MaterialCardView>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/english"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFAA00"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Skip"
        android:textAllCaps="false"
        app:cornerRadius="5dp"
        android:clickable="true"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"

        />


</RelativeLayout>