<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmer.EditFarmerProduct">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/rel2"
        android:elevation="5dp"
        android:background="#FF6F00"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_product"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="#fff"
            android:fontFamily="@font/ubuntu_m"/>




        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow"
            android:id="@+id/close"
            android:layout_marginTop="18dp"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel2">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/productImage"/>

        <EditText
            android:id="@+id/productCategories"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/productImage"
            android:inputType="textPersonName"
            android:hint="@string/product_categories"
            android:textColorHint="#99AAAB"
            android:editable="false"
            android:focusable="false"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/productName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/productCategories"
            android:inputType="textPersonName"
            android:hint="@string/product_name"
            android:editable="false"
            android:focusable="false"
            android:textColorHint="#99AAAB"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/productQuantity"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:inputType="textPhonetic"
            android:hint="@string/product_quantity"
            android:textColorHint="#99AAAB"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/productUnit"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/productQuantity"
            android:inputType="textPersonName"
            android:hint="@string/product_unit"
            android:editable="false"
            android:focusable="false"
            android:textColorHint="#99AAAB"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/productRate"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/productUnit"
            android:inputType="textPersonName"
            android:hint="@string/product_rate"
            android:textColorHint="#99AAAB"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit"
            android:padding="12dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/update_product"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_below="@id/productRate"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/bottom"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/update_product"
            android:textAllCaps="false"
            app:cornerRadius="10dp"
            android:clickable="true"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"/>












    </RelativeLayout>







</RelativeLayout>