<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="220dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#fff">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/farmer_ic"
            android:id="@+id/pro_img"/>

        <TextView
            android:id="@+id/farmer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_below="@id/pro_img"
            android:fontFamily="@font/ubuntu_m"
            android:text="Vaibhav Shriramjwar"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="#000"/>


        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:layout_below="@id/farmer_name"
            android:fontFamily="@font/ubuntu_m"
            android:text="+917350257828"
            android:textSize="12sp"
            android:textColor="#444444"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FB641B"
            android:layout_marginTop="10dp"
            android:layout_below="@id/customer_phone"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/view_products"
            app:cornerRadius="5dp"
            android:textAllCaps="false"
            android:clickable="true"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"/>



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>