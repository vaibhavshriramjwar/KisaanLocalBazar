<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:background="#fff">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:id="@+id/product_img"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/cart_itm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/product_img"
            android:fontFamily="@font/open_sans_bold"
            android:text="भोपळा / लौकी /pumpkin"
            android:textSize="35sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/product_price1"
            android:layout_below="@id/cart_itm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="2sp"
            android:layout_toRightOf="@id/product_img"
            android:fontFamily="@font/open_sans_semibold"
            android:text="1"
            android:textSize="38sp"
            android:textColor="#1A8207"/>
        <TextView
            android:id="@+id/product_price_unit"
            android:layout_below="@id/cart_itm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2sp"
            android:layout_toRightOf="@id/product_img"
            android:fontFamily="@font/open_sans_semibold"
            android:text="kg"
            android:textSize="38sp"
            android:textColor="#1A8207"/>

        <TextView
            android:id="@+id/cart_itm_price"
            android:layout_below="@id/product_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/product_img"
            android:fontFamily="@font/open_sans_semibold"
            android:text="20"
            android:textSize="38sp"
            android:textColor="#000"/>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/count"
            app:textSize="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            app:textColor="#000"
            app:backGroundColor="#DAE0E2"
            app:initialNumber="1"
            app:finalNumber="20"/>
















    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>