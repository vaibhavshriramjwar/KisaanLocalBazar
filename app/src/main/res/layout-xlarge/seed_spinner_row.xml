<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_view_flag"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/amaranth_leaves" />
    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_flag"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_view_flag"
        android:padding="10dp"
        android:gravity="center"
        android:text="Vegetable 1"
        android:fontFamily="@font/open_sans_semibold"
        android:textSize="32sp"
        android:layout_toRightOf="@+id/image_view_flag" />



</RelativeLayout>