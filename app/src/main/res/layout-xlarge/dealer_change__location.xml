<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".dealer.Dealer_change_Location">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/rel2"
        android:elevation="5dp"
        android:background="#FF6F00"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Your Location"
            android:layout_centerHorizontal="true"
            android:textSize="38sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="#fff"
            android:fontFamily="@font/ubuntu_m"/>




        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_arrow"
            android:id="@+id/close"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="18dp"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rel2"
        android:layout_width="match_parent"
        android:padding="30dp"
        android:gravity="center"
        android:layout_marginTop="180dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/new_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="@string/new_location"
            android:editable="false"
            android:focusable="false"
            android:textColorHint="#99AAAB"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:visibility="visible"
            android:maxLines="8"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit"
            android:layout_marginTop="20dp"
            android:textSize="32sp"
            android:padding="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/update_loc"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#FB641B"
            android:layout_below="@id/new_loc"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/update_location"
            app:cornerRadius="0dp"
            android:textAllCaps="false"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/background_light"
            android:textSize="32sp" />

    </RelativeLayout>



</RelativeLayout>