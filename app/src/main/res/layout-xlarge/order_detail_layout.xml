<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    android:background="#fff">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/apple"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/product_img"
            android:fontFamily="@font/open_sans_bold"
            android:text="भोपळा / लौकी /pumpkin"
            android:textSize="35sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/product_name"
            android:layout_toRightOf="@+id/product_img"
            android:fontFamily="@font/open_sans_bold"
            android:text="vps core lim"
            android:textSize="35sp"
            android:textColor="@color/bottom"/>

        <TextView
            android:id="@+id/product_quantity"
            android:layout_below="@id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2sp"
            android:layout_toRightOf="@+id/product_img"
            android:fontFamily="@font/open_sans_semibold"
            android:text="3"
            android:textSize="38sp"
            android:textColor="#1A8207"/>
        <TextView
            android:id="@+id/product_unit"
            android:layout_below="@id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2sp"
            android:layout_toRightOf="@+id/product_quantity"
            android:fontFamily="@font/open_sans_semibold"
            android:text="kg"
            android:textSize="38sp"
            android:textColor="#1A8207"/>

        <TextView
            android:id="@+id/price"
            android:layout_below="@id/product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2sp"
            android:layout_toRightOf="@id/product_img"
            android:fontFamily="@font/open_sans_semibold"
            android:text="20"
            android:textSize="38sp"
            android:textColor="#000"/>


