<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >






    <TextView
        android:id="@+id/intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="TextView"
        android:fontFamily="@font/ubuntu_m"
        android:textColor="#fff"
        android:textSize="32sp"
        android:textStyle="bold"
        />

    <TextView
        android:lineSpacingExtra="16sp"
        android:id="@+id/intro_description"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_m"
        android:layout_below="@id/intro_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#fff"
        android:textSize="15sp"
        android:text="In this section you can more brief information about trending topics about the world,as well as the Trends in world which is you should must know"
        android:layout_gravity="center_horizontal" />




</RelativeLayout>