<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="0dp"
    android:padding="0dp"
    android:clickable="true"
    android:background="#fff">


    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/mypro"
            android:id="@+id/icon_img"/>

        <TextView
            android:id="@+id/order_nae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0sp"
            android:layout_toRightOf="@id/icon_img"
            android:fontFamily="@font/open_sans_bold"
            android:text="ORDER ID"
            android:textSize="12sp"
            android:padding="0dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5sp"
            android:layout_below="@id/order_nae"
            android:fontFamily="@font/open_sans_bold"
            android:text="1601054353110"
            android:layout_toRightOf="@id/icon_img"
            android:textSize="16sp"
            android:padding="3dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/order_status"
            android:layout_below="@id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/icon_img"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Order Placed"
            android:textSize="18sp"
            android:padding="3dp"
            android:textColor="#1A8207"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_forward_ios_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/view"/>

    </RelativeLayout>





</com.google.android.material.card.MaterialCardView>