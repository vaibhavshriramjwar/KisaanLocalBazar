<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="9dp"
    app:cardElevation="2dp"
    android:id="@+id/cardviewuser"
    app:cardBackgroundColor="#fff"
    app:cardPreventCornerOverlap="true"
    app:contentPadding="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reltivelay1"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/regUserImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon2">
        </ImageView>

        <ImageView

            android:layout_alignParentEnd="true"
            android:background="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:id="@+id/blockImg"
            android:layout_alignParentRight="true" />

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#DAE0E2"
            android:id="@+id/line"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/regUserImg"
            android:layout_marginTop="10dp">
        </View>

        <TextView
            android:id="@+id/farmer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:text="Farmer Name"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skil"
            android:layout_below="@id/farmer_name"
            android:text="Address"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:padding="0dp"
            android:gravity="center_horizontal" />



        <TextView
            android:id="@+id/farmer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/skil"
            android:text="D4,Ramkrushna Apartment,Purva Colony,Sainagar,Amravati"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#F3B63A"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>