<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:elevation="20dp"
    android:backgroundTint="#fff"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="22sp"
            android:padding="10dp"
            android:id="@+id/cut"
            android:fontFamily="@font/ubuntu_m"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/not_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_setting"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/ubuntu_m" />

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="#707070"
            android:layout_below="@id/not_label"
            android:layout_centerHorizontal="true"
            android:id="@+id/vi1"/>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/store_open_close1"
            android:layout_below="@id/vi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="0dp">

            <net.colindodd.gradientlayout.GradientRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                gl:start_color="@color/col3"
                gl:end_color="@color/col4"
                gl:orientation="LEFT_RIGHT">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/fcmSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:fontFamily="@font/ubuntu_m"
                        android:text="@string/allow_notification"/>


                </RelativeLayout>

            </net.colindodd.gradientlayout.GradientRelativeLayout>

        </com.google.android.material.card.MaterialCardView>







    </RelativeLayout>









</com.google.android.material.card.MaterialCardView>