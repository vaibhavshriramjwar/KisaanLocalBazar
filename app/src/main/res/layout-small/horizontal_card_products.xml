<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#fff">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/apple"
            android:id="@+id/pro_img"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10sp"
            android:layout_below="@id/pro_img"
            android:fontFamily="@font/open_sans_bold"
            android:text="भोपळा / लौकी /pumpkin"
            android:textSize="15sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_below="@id/product_name"
            android:fontFamily="@font/open_sans_bold"
            android:text="vpscorelim"
            android:textSize="15sp"
            android:textColor="@color/bottom"/>


        <TextView
            android:id="@+id/product_price1"
            android:layout_below="@id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="1"
            android:textSize="18sp"
            android:textColor="#1A8207"/>
        <TextView
            android:id="@+id/product_price_unit"
            android:layout_below="@id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2sp"
            android:layout_toEndOf="@+id/product_price1"
            android:fontFamily="@font/open_sans_semibold"
            android:text="kg"
            android:textSize="18sp"
            android:textColor="#1A8207"/>


        <TextView
            android:id="@+id/rs"
            android:layout_below="@id/product_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2sp"

            android:fontFamily="@font/open_sans_semibold"
            android:text="Rs"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/price"
            android:layout_below="@id/product_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/product_price1"
            android:fontFamily="@font/open_sans_semibold"
            android:text="20"
            android:textSize="20sp"
            android:textColor="#FB641B"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>