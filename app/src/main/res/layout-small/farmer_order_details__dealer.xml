<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="0dp"
    tools:context=".farmer.FarmerOrderDetails_Dealer">


    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/rel2"
        android:elevation="5dp"
        android:background="#FF6F00"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER DETAILS"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="#fff"
            android:fontFamily="@font/ubuntu_m"/>




        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow"
            android:id="@+id/close"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="18dp"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>




    <ScrollView
        android:scrollbars="none"
        android:layout_below="@id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5">



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="15dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                android:background="#fff">

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/order_nae"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="ORDER ID"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/order_nae"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="1601054353110"
                        android:textSize="12sp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_below="@id/order_id"
                        android:background="#DAE0E2"
                        android:layout_marginTop="5dp"
                        android:id="@+id/div"/>



                    <TextView
                        android:id="@+id/cust_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8sp"
                        android:layout_below="@id/div"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="CUSTOMER NAME      :"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/div"
                        android:textColor="#000"
                        android:layout_toRightOf="@id/cust_label"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Vaibhav Shriramjwar"
                        android:textSize="14sp"/>



                    <TextView
                        android:id="@+id/cust_label_pho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="12sp"
                        android:layout_below="@id/cust_label"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="CUSTOMER PHONE    :"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/customer_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_below="@id/cust_label"
                        android:textColor="#000"
                        android:layout_toRightOf="@id/cust_label"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="7350257828"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/cust_label_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="12sp"
                        android:layout_below="@id/cust_label_pho"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="CUSTOMER ADDRESS:"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/customer_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_below="@id/cust_label_pho"
                        android:textColor="#000"
                        android:layout_toRightOf="@id/cust_label"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="D4,Ramkrushna Apartment,Purva Colony,Sainagar,Amaravati"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_below="@id/customer_address"
                        android:background="#DAE0E2"
                        android:layout_marginTop="12dp"
                        android:id="@+id/div1"/>


                    <TextView
                        android:id="@+id/order_status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8sp"
                        android:layout_below="@id/div1"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="ORDER STATUS           :"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/order_name"
                        android:layout_below="@id/div1"
                        android:layout_toRightOf="@id/order_status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Pending"
                        android:textSize="18sp"
                        android:textColor="#1A8207"/>



                    <TextView
                        android:id="@+id/order_expect_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8sp"
                        android:layout_below="@id/order_status_label"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="EXPECTED DELIVERY :"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/order_expect_date"
                        android:layout_below="@id/order_name"
                        android:layout_toRightOf="@id/order_status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="19-08-20 12:08 AM"
                        android:textSize="15sp"
                        android:textColor="#000"/>


                    <TextView
                        android:id="@+id/your_expect_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8sp"
                        android:layout_below="@id/order_expect_label"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="YOUR DELIVERY         :"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/your_expect_date"
                        android:layout_below="@id/order_expect_date"
                        android:layout_toRightOf="@id/order_status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Mentioned Here"
                        android:textSize="15sp"
                        android:textColor="#000"/>


                    <TextView
                        android:id="@+id/payment_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8sp"
                        android:layout_below="@id/your_expect_label"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="YOUR DELIVERY         :"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/payment_option"
                        android:layout_below="@id/your_expect_date"
                        android:layout_toRightOf="@id/order_status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Cash On Delivery"
                        android:textSize="15sp"
                        android:textColor="#000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_below="@id/payment_option"
                        android:background="#DAE0E2"
                        android:layout_marginTop="12dp"
                        android:id="@+id/div2"/>


                    <TextView
                        android:id="@+id/order_total_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8sp"
                        android:layout_below="@id/div2"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Total:"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/order_total_p"
                        android:layout_below="@id/div2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Rs 2000"
                        android:textSize="22sp"
                        android:textColor="#1A8207"/>




                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/call_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#FB641B"
                android:layout_below="@id/card_detail"
                android:drawableLeft="@drawable/iccall_24"
                android:fontFamily="@font/open_sans_semibold"
                android:text="CALL CUSTOMER"
                app:cornerRadius="30dp"
                android:textAllCaps="false"
                android:clickable="true"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/call_btn"
                android:padding="8dp">

                <TextView
                    android:id="@+id/ltxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRODUCTS"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="18sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:id="@+id/orders"/>




                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#FB641B"
                    android:layout_below="@id/orders"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="UPDATE ORDER STATUS"
                    app:cornerRadius="0dp"
                    android:textAllCaps="false"
                    android:clickable="true"
                    android:textColor="@android:color/background_light"
                    android:textSize="16sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/update"
                    android:id="@+id/order_delivered_not"
                    android:visibility="gone"
                    android:text="Good ! Order Already Completed "
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="#1A8207"
                    android:textSize="18sp"/>




            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>