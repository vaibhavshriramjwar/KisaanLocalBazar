<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".AboutUs">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/rel2"
        android:elevation="5dp"
        android:background="#FF6F00"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="#fff"
            android:fontFamily="@font/ubuntu_m"/>




        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow"
            android:id="@+id/close"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="18dp"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rel2"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/brand_logo_new"
            android:id="@+id/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:id="@+id/name"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:textColor="#2F0E61"
            android:text="Kisaan Local Bazar"
            android:fontFamily="@font/ubuntu_m"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Every once in a while, a new technology, an old problem, and a big idea turn into an innovation.
"
            android:layout_below="@id/name"
            android:textSize="17sp"
            android:id="@+id/desc"
            android:textAlignment="center"
            android:textColor="#4B4B4B"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>


        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="#5874FF"
            android:layout_below="@id/desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cornerRadius="0dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:id="@+id/btn1"
            android:fontFamily="@font/ubuntu_m"
            android:text="Learn More"
            android:textAllCaps="false"/>



        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2020 kisaan local bazar."
            android:layout_below="@id/btn1"
            android:textSize="15sp"
            android:id="@+id/copy"
            android:textAlignment="center"
            android:textColor="#4B4B4B"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>





    </RelativeLayout>


</RelativeLayout>